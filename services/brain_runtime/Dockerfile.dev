# Development Dockerfile with hot reload support
FROM python:3.11-slim

# Create non-root user matching host UID/GID (fixes file permissions)
ARG USER_ID=1000
ARG GROUP_ID=1000
RUN (groupadd -g ${GROUP_ID} app 2>/dev/null || groupadd app) && \
    useradd -u ${USER_ID} -g $(getent group ${GROUP_ID} | cut -d: -f1) -m -s /bin/bash app

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    curl \
    git \
    ripgrep \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files
COPY --chown=app:app brain_runtime/pyproject.toml brain_runtime/uv.lock ./

# Install Python dependencies
RUN uv sync --frozen

# Copy sibling modules
COPY --chown=app:app processors/ ../processors/
COPY --chown=app:app skills/ ../skills/

# Create data directories and fix ownership
RUN mkdir -p /app/data/logs /app/data/secrets && \
    chown -R app:app /app/data /app/.venv

EXPOSE 8000

# Switch to non-root user
USER app

# Development command with hot reload
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
