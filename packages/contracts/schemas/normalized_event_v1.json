{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://second-brain.local/schemas/normalized_event_v1.json",
  "title": "NormalizedEventV1",
  "description": "A normalized calendar event from any provider",
  "type": "object",
  "required": ["event_id", "provider", "start", "end", "title", "all_day"],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Provider-specific event identifier"
    },
    "provider": {
      "type": "string",
      "enum": ["google", "m365"],
      "description": "Calendar provider"
    },
    "calendar_id": {
      "type": "string",
      "description": "Calendar identifier within provider"
    },
    "start": {
      "type": "string",
      "format": "date-time",
      "description": "Event start time (ISO 8601)"
    },
    "end": {
      "type": "string",
      "format": "date-time",
      "description": "Event end time (ISO 8601)"
    },
    "timezone": {
      "type": "string",
      "description": "IANA timezone identifier"
    },
    "title": {
      "type": "string",
      "description": "Event title/summary"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Event description/body"
    },
    "location": {
      "type": ["string", "null"],
      "description": "Event location"
    },
    "all_day": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is an all-day event"
    },
    "attendees": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "name": { "type": "string" },
          "status": { "type": "string" }
        }
      },
      "default": []
    },
    "visibility": {
      "type": "string",
      "enum": ["private", "public"],
      "default": "private"
    },
    "source_provenance": {
      "type": "object",
      "properties": {
        "raw_hash": { "type": "string" },
        "fetched_at": { "type": "string", "format": "date-time" }
      }
    }
  }
}
